# ========================================
# XmasList - Environment Variables Example
# ========================================
# Copy this file to .env and fill in your values

# ========================================
# Amazon API Keys
# ========================================

# Amazon Product Advertising API (PA-API 5.0)
# Get these from: https://affiliate-program.amazon.com/
AMAZON_ACCESS_KEY=
AMAZON_SECRET_KEY=
AMAZON_PARTNER_TAG=

# Rainforest API (Third-party scraping service)
# Get from: https://www.rainforestapi.com/
RAINFOREST_API_KEY=

# ========================================
# Scraping Services
# ========================================

# ScraperAPI
# Get from: https://www.scraperapi.com/
SCRAPER_API_KEY=

# ScrapeOps (Alternative to ScraperAPI)
# Get from: https://scrapeops.io/
SCRAPEOPS_API_KEY=

# ========================================
# Database
# ========================================

DB_HOST=localhost
DB_PORT=5432
DB_NAME=xmaslist
DB_USER=postgres
DB_PASSWORD=
DB_SSL=false

# ========================================
# Redis (Caching)
# ========================================

REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_TLS=false

# ========================================
# Monitoring & Error Tracking
# ========================================

# Sentry (Error tracking)
# Get from: https://sentry.io/
SENTRY_DSN=

# ========================================
# Application
# ========================================

NODE_ENV=development
PORT=3000
LOG_LEVEL=info

# ========================================
# Security
# ========================================

# Session secret (generate with: openssl rand -base64 32)
SESSION_SECRET=

# JWT secret (generate with: openssl rand -base64 32)
JWT_SECRET=

# ========================================
# Rate Limiting
# ========================================

# Enable rate limiting (true/false)
RATE_LIMIT_ENABLED=true

# Max requests per IP per window
RATE_LIMIT_MAX=100

# Time window in milliseconds (15 minutes = 900000)
RATE_LIMIT_WINDOW_MS=900000
